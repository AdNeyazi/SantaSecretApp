<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2><%= @employee.name %></h2>
          <p class="text-muted mb-0"><%= @employee.email %></p>
        </div>
        <div class="card-body">
          <h5 class="card-title">Secret Santa Assignments</h5>
          
          <% if @employee.secret_santa_assignments.any? %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Year</th>
                    <th>Secret Child</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @employee.secret_santa_assignments.order(:year).each do |assignment| %>
                    <tr>
                      <td><%= assignment.year %></td>
                      <td>
                        <% if assignment.secret_child.slug.present? %>
                          <%= link_to assignment.secret_child.name, employee_path(assignment.secret_child.slug), class: 'text-decoration-none' %>
                        <% else %>
                          <%= assignment.secret_child.name %>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted">Secret Santa for <%= assignment.secret_child.name %></small>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted">No secret santa assignments yet.</p>
          <% end %>
          
          <h5 class="card-title mt-4">Assigned as Secret Child</h5>
          
          <% if @employee.assigned_as_secret_child.any? %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Year</th>
                    <th>Secret Santa</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @employee.assigned_as_secret_child.order(:year).each do |assignment| %>
                    <tr>
                      <td><%= assignment.year %></td>
                      <td>
                        <% if assignment.employee.slug.present? %>
                          <%= link_to assignment.employee.name, employee_path(assignment.employee.slug), class: 'text-decoration-none' %>
                        <% else %>
                          <%= assignment.employee.name %>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted">Secret child of <%= assignment.employee.name %></small>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted">Not assigned as a secret child yet.</p>
          <% end %>
        </div>
        <div class="card-footer">
          <%= link_to 'Back to Secret Santa', root_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
